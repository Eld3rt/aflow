generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Workflow {
  id        String   @id @default(uuid())
  name      String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trigger    Trigger?
  steps      Step[]
  executions WorkflowExecution[]

  @@map("workflows")
}

model Trigger {
  id         String   @id @default(uuid())
  type       String
  config     Json
  workflowId String   @unique
  createdAt  DateTime @default(now())

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@map("triggers")
}

model Step {
  id         String   @id @default(uuid())
  type       String
  config     Json
  order      Int
  workflowId String
  createdAt  DateTime @default(now())

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@map("steps")
}

model WorkflowExecution {
  id              String   @id @default(uuid())
  workflowId      String
  status          String   // running, paused, failed, completed
  currentStepOrder Int?    // Pointer to next step to execute (null if completed)
  context         Json     // Accumulated execution context
  pausedAt        DateTime?
  resumeAt        DateTime? // For delayed retry (timestamp-based pause)
  error           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@map("workflow_executions")
}
