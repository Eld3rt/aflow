generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workflows Workflow[]

  @@map("users")
}

model Workflow {
  id        String   @id @default(uuid())
  name      String
  status    String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  trigger             Trigger?
  steps               Step[]
  executions          WorkflowExecution[]
  notificationConfigs NotificationConfig[]

  @@map("workflows")
}

model Trigger {
  id         String   @id @default(uuid())
  type       String
  config     Json
  workflowId String   @unique
  createdAt  DateTime @default(now())

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@map("triggers")
}

model Step {
  id         String   @id @default(uuid())
  type       String
  config     Json
  order      Int
  workflowId String
  createdAt  DateTime @default(now())

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@map("steps")
}

model WorkflowExecution {
  id               String    @id @default(uuid())
  workflowId       String
  status           String // running, paused, failed, completed
  currentStepOrder Int? // Pointer to next step to execute (null if completed)
  context          Json // Accumulated execution context
  pausedAt         DateTime?
  resumeAt         DateTime? // For delayed retry (timestamp-based pause)
  error            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  workflow Workflow       @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  logs     ExecutionLog[]

  @@map("workflow_executions")
}

model NotificationConfig {
  id         String   @id @default(uuid())
  workflowId String
  type       String // email, webhook
  config     Json // Configuration: { to: string } for email, { url: string } for webhook
  onFailure  Boolean  @default(true) // Send notification on permanent failure
  onPause    Boolean  @default(true) // Send notification on pause
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@map("notification_configs")
}

model ExecutionLog {
  id          String   @id @default(uuid())
  executionId String
  stepId      String
  stepOrder   Int
  eventType   String // started, completed, failed, paused, retried
  timestamp   DateTime @default(now())
  metadata    Json? // Optional: { error?: string, retryCount?: number }
  createdAt   DateTime @default(now())

  execution WorkflowExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)

  @@index([executionId, timestamp])
  @@map("execution_logs")
}
